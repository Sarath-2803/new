        body {
            background: linear-gradient(120deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }
        .navbar {
            z-index: 100;
            box-shadow: 0 2px 12px rgba(37,211,102,0.06);
        }
        .brand {
            font-family: 'Dancing Script', cursive;
            font-size: 2.7rem;
            color: #25D366;
            font-weight: bold;
            letter-spacing: 2px;
            text-shadow: 0 2px 8px rgba(37,211,102,0.08);
        }
        .banner-section {
            background: linear-gradient(120deg, #f8fafc 0%, #e2fbe5 100%);
            border-radius: 2.5rem;
            box-shadow: 0 8px 32px rgba(37,211,102,0.10);
            padding: 3.5rem 2rem 2.5rem 2rem;
            margin-top: 2.5rem;
            margin-bottom: 2.5rem;
            animation: fadeIn 1.2s;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(40px);}
            to { opacity: 1; transform: none;}
        }
        .banner-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: #222;
            letter-spacing: 1px;
        }
        .banner-subtitle {
            color: #444;
            font-size: 1.25rem;
            margin-bottom: 2.2rem;
        }
        .cta-btn {
            min-width: 170px;
            font-weight: 700;
            letter-spacing: 0.5px;
            font-size: 1.15rem;
            border-radius: 2rem;
            box-shadow: 0 2px 8px rgba(37,211,102,0.08);
            transition: background 0.18s, color 0.18s, box-shadow 0.18s;
        }
        .cta-btn-primary {
            background: #25D366;
            color: #fff;
            border: none;
        }
        .cta-btn-primary:hover {
            background: #128c4b;
            color: #fff;
            box-shadow: 0 4px 16px rgba(37,211,102,0.18);
        }
        .cta-btn-outline {
            background: #fff;
            color: #25D366;
            border: 2px solid #25D366;
        }
        .cta-btn-outline:hover {
            background: #e6f9ed;
            color: #128c4b;
            border-color: #128c4b;
        }
        .features-section {
            margin-top: 3.5rem;
            margin-bottom: 3.5rem;
        }
        .feature-card {
            background: #fff;
            border-radius: 1.2rem;
            box-shadow: 0 4px 18px rgba(37,211,102,0.07);
            padding: 2.2rem 1.5rem 1.7rem 1.5rem;
            text-align: center;
            height: 100%;
            transition: transform 0.18s, box-shadow 0.18s;
            border: 1.5px solid #e2e8f0;
        }
        .feature-card:hover {
            transform: translateY(-8px) scale(1.035);
            box-shadow: 0 8px 32px rgba(37,211,102,0.13);
            border-color: #25D36633;
        }
        .feature-icon {
            font-size: 2.7rem;
            color: #25D366;
            margin-bottom: 1.1rem;
        }
        .feature-title {
            font-size: 1.22rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #222;
        }
        .feature-desc {
            color: #555;
            font-size: 1.04rem;
        }
        .cta-section {
            background: linear-gradient(120deg, #25D366 60%, #43e97b 100%);
            border-radius: 1.5rem;
            color: #fff;
            padding: 2.7rem 1.5rem 2.2rem 1.5rem;
            text-align: center;
            margin-bottom: 2.5rem;
            box-shadow: 0 4px 18px rgba(37,211,102,0.10);
        }
        .cta-section .cta-btn {
            background: #fff;
            color: #25D366;
            border: none;
            margin-top: 1.2rem;
        }
